    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "plop": "^2.7.4",
    "postcss": "^7",
    "prettier": "2.3.2",
    "tailwind-styled-components": "^2.0.3",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.3.5"
  }
